CC     = g++
CFLAGS = -Wall -g -fpack-struct

HTTP  		= Http
THR    		= Thread


HEADERS =  $(THR).h
OBJECTS = $(THR).o $(HTTP).o

# ****************************************************

http: $(OBJECTS)
	$(CC) $(CFLAGS) -o $@ $^

$(THR).o: $(THR).cpp $(THR).h
	$(CC) $(CFLAGS) -o $@ -c $<
	
$(HTTP).o: $(HTTP).cpp $(HEADERS)
	$(CC) $(CFLAGS) -o $@ -c $<

clean:
	-rm *.o;
